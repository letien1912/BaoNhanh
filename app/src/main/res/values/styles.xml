<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryColor</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimaryColor</item>
        <item name="colorAccent">@color/colorColorAccent</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/md_deep_orange_100</item>
        <item name="colorPrimary">@color/md_deep_orange_100</item>
        <item name="colorPrimaryDark">@color/md_deep_orange_100</item>
    </style>
    
    <style name="Theme.Base" parent="AppTheme">
    </style>
    <style name="ToolbarTheme" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
        <item name="android:actionMenuTextColor">@color/colorDividerColor</item>
    </style>

</resources>
