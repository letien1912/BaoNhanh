<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        card:cardCornerRadius="6dp"
        card:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:id="@+id/catelogyImageView"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingRight="5dp"
                android:src="@drawable/placeholder"/>

            <TextView
                android:id="@+id/catelogyCaptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="asdasdsadsadsad"
                android:textAppearance="?android:attr/textAppearance"
                android:layout_alignTop="@+id/catelogyImageView"
                android:layout_alignLeft="@+id/catelogyDescipeTextView"
                android:layout_alignStart="@+id/catelogyDescipeTextView" />

            <TextView
                android:id="@+id/catelogyDescipeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/catelogyCaptionTextView"
                android:layout_toRightOf="@+id/catelogyImageView"
                android:textAppearance="?android:attr/textAppearance"
                android:text="asdsadasd"
                android:textColor="@color/md_blue_700"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>